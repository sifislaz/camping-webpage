<html lang="el">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Επεξεργασία Κράτησης | Cretan Camping</title>
        <!--Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/img/favicon-black-solid.ico">
        <!--Bootstrap 5.1.3 CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!--Font Awesome-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.css" media="all"/>
        <!--CSS Stylesheets-->
        <link rel="stylesheet" href="assets/css/edit-booking-style.css">
        <!--Didact Gothic Font-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Didact+Gothic&display=swap" rel="stylesheet">
    
    </head>
    <body>
        <div class="main-body">
            <h1 class="title">Επεξεργασία Κράτησης</h1>
            <hr>
            {{#if message}}
            <div class="alert alert-danger" role="alert">{{message}}</div>
            {{else}}
            {{#each booking}}
            <h2 class="subtitle">Η κράτησή σας</h2>
            <div id="booked-space">
                <h3 class="space-title">Χώρος για {{space_capacity}} άτομα</h3>
                <div>Χαρακτηριστικά:</div>
                <ul class="features">
                    <li>Πολύπριζο 5 θέσεων</li>
                    <li>Φως πάνω από τον χώρο της σκηνής</li>
                    <li>{{location}}m από την θάλασσα</li>
                </ul>
            </div>
            <h2 class="subtitle">Αλλαγή Κράτησης</h2>
            <form method="get" action="/bookings/{{id}}/edit/">
                <div class="formfield">
                    <label for="booking-id">Αρ. Κράτησης:</label>
                    <input type="text" name="id" id="booking-id" value="{{id}}" disabled>
                </div>
                <div class="formfield">
                    <label for="people">Αριθμός Ατόμων</label>
                    <select name="people" id="people">
                        <option value=""></option>
                        <option value="1"{{#ifEqual booking_people 1}}selected{{/ifEqual}}>1</option>
                        <option value="2"{{#ifEqual booking_people 2}}selected{{/ifEqual}}>2</option>
                        <option value="3"{{#ifEqual booking_people 3}}selected{{/ifEqual}}>3</option>
                        <option value="4"{{#ifEqual booking_people 4}}selected{{/ifEqual}}>4</option>
                    </select>
                </div>
                <div class="formfield">
                    <label for="dates">Ημερομηνίες Κράτησης</label>
                        <div id="dates">
                            <span for="startdate">Από</span>
                            <input type="date" name="checkin" id="startdate" value="{{checkin}}">
                            <span for="enddate">Έως</span>
                            <input type="date" name="checkout" id="enddate" value="{{checkout}}">
                        </div>
                </div>
                <button class="my-button-green" id="search-btn" type="submit">Αναζήτηση</button>
            </form>
            {{/each}}
            {{/if}}
        </div>
    </body>
</html>
