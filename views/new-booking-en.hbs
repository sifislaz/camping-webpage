
        <div class="main-body">
            <h1 class="title">New Booking</h1>
            <hr>
            <form action='/en/newBooking/' method="post" id="search-form">
                <fieldset id="personal-info">
                    <legend>Personal Information</legend>
                    <label for="fullname">Full Name</label>
                    <div id="fullname">
                        <input type="text" id="firstname" name="firstname" placeholder="First Name" value="{{firstname}}" required>
                        <input type="text" id="lastname" name="lastname" placeholder="Last Name" value="{{lastname}}" required>
                    </div>
                    <label for="address">Address</label>
                    <div id="address">
                        <input type="text" name="street" id="street" placeholder="Street" required>
                        <input type="text" name="num" id="num" placeholder="No" pattern="\d{1,3}[ΑΒΓABC]?" required>
                        <input type="text" name="zip" id="zip" placeholder="Zip Code" pattern="/\d{5}/" required>
                    </div>
                    <label for="tel">Contact Information</label>
                    <div id="tel">
                        <input type="tel" name="cell" id="cell" placeholder="Cellphone" pattern="/\d{10}/" required>
                        <span>Do not include telephone code</span>
                    </div>
                </fieldset>
                <hr>
                <div id="booking-info">
                    <fieldset>
                        <legend>Booking Information</legend>
                        <label for="people">No of People</label>
                        <select name="people" id="people" min="1" max="4" required>
                            <option value=""></option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>                            
                        </select>
                        <div class="dates">
                            <label for="dates">Dates</label>
                            <div id="dates">
                                <span for="startdate">From</span>
                                <input type="date" id="startdate" name="checkin" required>
                                <span for="enddate">To</span>
                                <input type="date" id="enddate" name="checkout" required>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <button class="my-button-green" id="search-btn" onclick="searchSpace()" type="submit">Search</button>
            </form>
            {{#if msg}}
            <div class="alert alert-danger" role="alert">{{msg}}</div>
            {{else}}
            {{#if search}}
            <div id="sub-form">
                {{#if result}}
                {{#each result}}
                <form method="post" action="/addBooking/">
                    <fieldset id="search-results">
                        <legend>Available Options</legend>
                        <div id="avail-spaces">
                            <button type="button">
                                <h2 class="subtitle">{{no_of_people}} person tent space</h2>
                                <div class="features">Features:
                                    <ul class="features-list">
                                        <li>5 socket power strip</li>
                                        <li>Light above tent</li>
                                        <li>{{location}}m away from beach</li>
                                    </ul>
                                </div>
                            </button>
                        </div>
                    </fieldset>
                    {{/each}}
                    <button class="my-button-green" type="submit" value="submit">Submit</button>
                </form>
                {{else}}
                <div class="alert alert-primary" role="alert">Δυστυχώς δεν υπάρχουν διαθέσιμες επιλογές</div>
                {{/if}}
            </div>
            {{/if}}
            {{/if}}
        </div>
    