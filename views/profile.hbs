

<div class="text-center title">
    <h1>Προφίλ</h1>
</div>

<hr>

<div class="container disp">
    {{#each info}}
    <form method="post" action="/profile/">
        <label>Ονοματεπώνυμο</label>
        <div class="input-group mb-3 user">
            <input name="fname" type="text" class="form-control" placeholder="Όνομα" aria-label="FullName" aria-describedby="basic-addon1" required value="{{firstname}}">
            <input name="lname" type="text" class="form-control" placeholder="Επώνυμο" aria-label="FullName" aria-describedby="basic-addon1" required value="{{lastname}}">
        </div>

        <div class="form-group mb-3">

            <label for=username>Όνομα Χρήστη</label>
            <input type="text" class="form-control" id="username" placeholder="Όνομα Χρήστη" value="{{username}}" disabled>

        </div>
        <div class="form-group mb-3">

            <label for=email>Ηλεκτρονικό Ταχυδρομείο</label>
            <input name="email" type="email" class="form-control" id="email" placeholder="name@example.com" value="{{email}}">

        </div>
        <div class="form-group mb-3">

            <label for=username>Κινητό Τηλέφωνο</label>
            <input name="mobile" type="text" class="form-control" id="mobile" placeholder="Κινητό Τηλέφωνο" value="{{mobile}}">

        </div>
        <div class="form-group mb-3">

            <label for=oldpass>Παλιός Κωδικός</label>
            <input name="oldPass" type="password" class="form-control" id="oldpass" placeholder="Παλιός Κωδικός">

        </div>
        <div class="form-group mb-3">

            <label for=newpass>Νέος Κωδικός</label>
            <input name="newPass" type="password" class="form-control" id="newpass" placeholder="Νέος Κωδικός">

        </div>
        <div class="form-group mb-3">

            <label for=renewpass>Επαναλάβετε τον Νέο Κωδικό</label>
            <input name="reNewPass" type="password" class="form-control" id="renewpass" placeholder="Νέος Κωδικός">

        </div>

        <div class="row">

            <div class="text-center btns">

                <button type="submit" class="my-button-green" id="saveBtn">Αποθήκευση Αλλαγών</button>
                <button type="reset" class="my my-button-red">Ακύρωση</button>

            </div>

        </div>
    </form>
    {{/each}}
</div>
