
    <div class="container-fluid disp">
        <h1 class="title">Κρατήσεις</h1>
        <hr>
        <div class="container main-cont">
            <div class="row">
                <div class="col-lg-6 clmn">
                    <h2 class="subtitle">Δημιουργία νέας κράτησης</h2>
                <div class="book-button"><button class="my-button-blue">Δημιουργία νέας κράτησης</button></div>
                </div>
                <div class="col-lg-6 clmn">
                    <h2 class="subtitle">Διαχείριση κρατήσεων</h2>
                    <table>
                        <thead>
                            <th>Κωδ. Κράτησης</th>
                            <th>Κατάσταση Κράτησης</th>
                        </thead>
                        <tbody>
                            {{#each bookings}}
                                <tr>
                                    {{#ifEqual situation "WAITING"}}
                                    <td><a href="/bookings/{{id}}/" class="go-to-booking">{{id}}</a></td>
                                    {{else ifEqual situation "ΣΕ ΑΝΑΜΟΝΗ"}}
                                    <td><a href="/bookings/{{id}}/" class="go-to-booking">{{id}}</a></td>
                                    {{else}}
                                    <td>{{id}}</td>
                                    {{/ifEqual}}
                                    <td class="situation">{{situation}}<span class="fa fa-circle-check icon"></span><span class="fa fa-circle-xmark icon"></span><span class="fa fa-circle-exclamation icon"></span></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
