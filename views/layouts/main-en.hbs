<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{pageName}} | Cretan Camping</title>
        <!--Favicon-->
        <link rel="icon" type="image/x-icon" href="/img/favicon-black-solid.ico">
        <!--CSS Stylesheets-->
        <link rel="stylesheet" href="/css/header-style.css" type="text/css">
        <link rel="stylesheet" href="/css/footer-style.css" type="text/css">
        {{#unless userId}}
        <link rel="stylesheet" href="/css/sign-in-pop-up-style.css" type="text/css">
        <link rel="stylesheet" href="/css/sign-up-pop-up-style.css" type="text/css">
        {{/unless}}
        {{#ifEqual link ""}}
        <link rel="stylesheet" href="/css/index-style.css" type="text/css">
        {{else ifEqual link "camping/facilities/"}}
        <link rel="stylesheet" href="/css/facilities-style.css" type="text/css">
        {{else ifEqual link "camping/season/"}}
        <link rel="stylesheet" href="/css/season-style.css" type="text/css">
        {{else ifEqual link "camping/activities/"}}
        <link rel="stylesheet" href="/css/activities-style.css" type="text/css">
        {{else ifEqual link "pricelist/"}}
        <link rel="stylesheet" href="/css/pricelist-style.css" type="text/css">
        {{else ifEqual link "crete/"}}
        <link rel="stylesheet" href="/css/crete-style.css" type="text/css">
        {{else ifEqual link "form/"}}
        <link rel="stylesheet" href="/css/form-style.css" type="text/css">
        {{else ifEqual link "admin/"}}
        <link rel="stylesheet" href="/css/admin-style.css" type="text/css">
        {{else ifEqual link "admin/bookings/"}}
        <link rel="stylesheet" href="/css/admin-bookings-style.css" type="text/css">
        {{else ifEqual link "admin/space/"}}
        <link rel="stylesheet" href="/css/admin-space-style.css" type="text/css">
        {{else ifEqual link "admin/statistics/"}}
        <link rel="stylesheet" href="/css/admin-stats-style.css" type="text/css">
        {{else ifEqual link "bookings/"}}
        <link rel="stylesheet" href="/css/booking-selection-style.css" type="text/css">
        {{else ifEqual link "profile/"}}
        <link rel="stylesheet" href="/css/profile-style.css" type="text/css">
        {{else ifEqual link "newBooking/"}}
        <link rel="stylesheet" href="/css/new-booking-style.css">
        {{/ifEqual}}
        {{#if css}}
        <link rel="stylesheet" href="/css/edit-booking-style.css" type="text/css">
        {{/if}}
        <!--Bootstrap 5.1.3 CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!--Font Awesome-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.css" media="all"/>
        <!--Didact Gothic Font-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Didact+Gothic&display=swap" rel="stylesheet">
    </head>

    <body {{#unless userId}}onload="revealPassword()"{{/unless}}>
        {{#if userId}}
        {{>header-logged-en}}
        {{else}}
        {{>header-en}}
        {{> sign-in-up-modal-en}}
        {{/if}}
        {{{body}}}
        {{#ifEqual userId 1}}
        {{else}}
        {{> footer-en}}
        {{/ifEqual}}
    </body>
    <script src="/js/langCookie.js"></script>
    {{#unless userId}}
    <script src="/js/password.js"></script>
    <script src="/js/panel-change.js"></script>
    {{/unless}}
    {{#ifEqual link "bookings/"}}
    <script src="/js/booking-class.js"></script>
    {{else ifEqual link "crete/"}}
    <script src="/js/slideshow.js"></script>
    {{else ifEqual link "camping/facilities/"}}
    <script src="/js/slideshow.js"></script>
    {{else ifEqual link "form/"}}
    <script src="/js/comment-pannel-change.js"></script>
    {{else ifEqual link "profile/"}}
    <script src="/js/pass-match.js"></script>
    {{else ifEqual link "bookings/{{booking.id}}/"}}
    <script src="assets/js/booking-scripts.js"></script>
    {{else ifEqual link "newBooking/"}}
    <script src="/js/booking-scripts.js"></script>
    {{else ifEqual link ""}}
    <script src="/js/index-pannel-change.js"></script>
    {{/ifEqual}}

    {{#if css}}
    <script src="/js/booking-scripts.js"></script>
    {{/if}}
    <!--Bootstrap 5.1.3 JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>
