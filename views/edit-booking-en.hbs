<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit Booking | Cretan Camping</title>
        <!--Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/img/favicon-black-solid.ico">
        <!--Bootstrap 5.1.3 CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!--Font Awesome-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.css" media="all"/>
        <!--CSS Stylesheets-->
        <link rel="stylesheet" href="assets/css/edit-booking-style.css">
        <!--Didact Gothic Font-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Didact+Gothic&display=swap" rel="stylesheet">
    
    </head>
    <body>
        <div class="main-body">
            <h1 class="title">Edit Booking</h1>
            <hr>
            {{#if message}}
            <div class="alert alert-danger" role="alert">{{message}}</div>
            {{else}}
            {{#each booking}}
            <h2 class="subtitle">Your Booking</h2>
            <div id="booked-space">
                <h3 class="space-title">3 person tent space</h3>
                <div>Features:</div>
                <ul class="features">
                    <li>5 socket power strip</li>
                    <li>Light above tent</li>
                    <li>{{location}}m away from beach</li>
                </ul>
            </div>
            <h2 class="subtitle">Change Reservation</h2>
            <form action="#">
                <div class="formfield">
                    <label for="booking-id">Booking no:</label>
                    <input type="text" name="id" id="booking-id" value="{{booking.id}}" disabled>
                </div>
                <div class="formfield">
                    <label for="people">No of People</label>
                    <select name="people" id="people">
                        <option value=""></option>
                        <option value="1"{{#ifEqual booking_people 1}}selected{{/ifEqual}}>1</option>
                        <option value="2"{{#ifEqual booking_people 2}}selected{{/ifEqual}}>2</option>
                        <option value="3"{{#ifEqual booking_people 3}}selected{{/ifEqual}}>3</option>
                        <option value="4"{{#ifEqual booking_people 4}}selected{{/ifEqual}}>4</option>
                    </select>
                </div>
                <div class="formfield">
                    <label for="dates">Dates</label>
                        <div id="dates">
                            <span for="startdate">From</span>
                            <input type="date" name="checkin" id="startdate" value="{{booking.checkin}}">
                            <span for="enddate">To</span>
                            <input type="date" name="checkout" id="enddate" value="{{booking.checkout}}">
                        </div>
                </div>
                <button class="my-button-green" id="search-btn" type="button">search</button>
                <div id="search-results">
                    <hr>
                </div>
            </form>
            {{/each}}
            {{/if}}
        </div>
    </body>
    <script src="assets/js/booking-scripts.js"></script>
</html>
